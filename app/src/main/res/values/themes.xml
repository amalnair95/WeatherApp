<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <!--<item name="colorPrimary">#ADD1AE</item>-->
       <!-- <item name="colorPrimary">#fcfcf4</item>-->
        <item name="colorPrimary">#6ec00c</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6ec00c</item>
        <item name="colorSecondaryVariant">#6ec00c</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--for changing the color of menu dots-->
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_icon</item>
    </style>
    <style name="Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>