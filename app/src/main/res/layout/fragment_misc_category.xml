<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:padding="@dimen/_6dp"
        android:weightSum="3">

       <!-- <androidx.cardview.widget.CardView
            android:id="@+id/foodDetailsCardView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            >-->
            <LinearLayout
                android:id="@+id/foodDetailsCardView"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/food"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_2dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/segoe_ui"
                    android:layout_weight="1"
                    android:textColor="@color/colorVirenxia"
                    android:text="@string/food_nutrients"/>
            </LinearLayout>

        <!--</androidx.cardview.widget.CardView>-->

        <!--<androidx.cardview.widget.CardView
            android:id="@+id/recipeDetailsCardView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            >-->
            <LinearLayout
                android:id="@+id/recipeDetailsCardView"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/recipe_book"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_2dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/segoe_ui"
                    android:layout_weight="1"
                    android:textColor="@color/colorVirenxia"
                    android:text="@string/food_recipe"/>

            </LinearLayout>
        <!--</androidx.cardview.widget.CardView>-->
        <LinearLayout
            android:id="@+id/dictionaryCardView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_gravity="bottom">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/dictionary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/segoe_ui"
                android:layout_weight="1"
                android:textColor="@color/colorVirenxia"
                android:text="@string/dictionary"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/touchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

    </FrameLayout>
</LinearLayout>