        <androidx.cardview.widget.CardView
            android:id="@+id/soilCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            app:cardElevation="@dimen/_4dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/soil"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_6dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/colorVirenxia"
                android:textSize="@dimen/_16sp"
                android:text="@string/soil_details"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fireCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            app:cardBackgroundColor="@color/cardBackground2"
            app:cardElevation="@dimen/_4dp"
            android:visibility="gone"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fire"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_6dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="@dimen/_16sp"
                    android:text="@string/fire_details"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/scannerCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            app:cardElevation="@dimen/_4dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/qr_code"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_6dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorVirenxia"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="@dimen/_16sp"
                    android:text="@string/code_reader"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/touchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

    </FrameLayout>
</LinearLayout>