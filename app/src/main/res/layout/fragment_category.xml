<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/weatherCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            app:cardElevation="@dimen/_4dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/raining"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_6dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorVirenxia"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="@dimen/_16sp"
                    android:layout_weight="1"
                    android:text="@string/weather_details"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/airCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            app:cardElevation="@dimen/_4dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/clean_air"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_6dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/colorVirenxia"
                android:textSize="@dimen/_16sp"
                android:text="@string/air_quality_details"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pollenCardView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/screenBackground"
            app:cardElevation="@dimen/_4dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pollen"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_6dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/colorVirenxia"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="@dimen/_16sp"
                    android:text="@string/pollen_details"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="3">

